unzip foodmart_data.zip

# creating HDFS directories for foodamrt tables
hdfs dfs -mkdir /apps/hive/warehouse/foodmart.db
hdfs dfs -mkdir /apps/hive/warehouse/foodmart.db/product
hdfs dfs -mkdir /apps/hive/warehouse/foodmart.db/store
hdfs dfs -mkdir /apps/hive/warehouse/foodmart.db/customer
hdfs dfs -mkdir /apps/hive/warehouse/foodmart.db/sales_fact_1998
hdfs dfs -mkdir /apps/hive/warehouse/foodmart.db/inventory_fact_1998

# copying sample data files to HDFS corresponding directories 
hdfs dfs -copyFromLocal /home/hive/foodmart_data/product /apps/hive/warehouse/foodmart.db/product
hdfs dfs -copyFromLocal /home/hive/foodmart_data/store /apps/hive/warehouse/foodmart.db/store
hdfs dfs -copyFromLocal /home/hive/foodmart_data/customer /apps/hive/warehouse/foodmart.db/customer
hdfs dfs -copyFromLocal /home/hive/foodmart_data/sales_fact_1998 /apps/hive/warehouse/foodmart.db/sales_fact_1998
hdfs dfs -copyFromLocal /home/hive/foodmart_data/inventory_fact_1998 /apps/hive/warehouse/foodmart.db/inventory_fact_1998

hdfs dfs -chmod -R 777 /apps/hive/warehouse/foodmart.db


